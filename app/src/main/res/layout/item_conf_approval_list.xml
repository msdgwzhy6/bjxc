<com.zhy.android.percent.support.PercentLinearLayout
    android:id="@+id/ll_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/rl_operate"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLines="1"
        android:padding="10dp"
        android:paddingBottom="10dp"
        android:textSize="16sp"
        android:singleLine="true"
        android:text="序号"
        android:textColor="#4F4F4F"
        app:layout_widthPercent="7%"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="16sp"
        android:maxLines="1"
        android:singleLine="true"
        android:text="会议名称会议名称"
        android:textColor="#4F4F4F"
        app:layout_widthPercent="20%"/>

    <TextView
        android:id="@+id/tv_proposer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLines="1"
        android:singleLine="true"
        android:text="申请人申请人"
        android:textColor="#4F4F4F"
        android:textSize="16sp"
        app:layout_widthPercent="10%"/>

    <TextView
        android:id="@+id/tv_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLines="1"
        android:singleLine="true"
        android:text="主办部门"
        android:textSize="16sp"
        android:textColor="#4F4F4F"
        app:layout_widthPercent="12%"/>

    <TextView
        android:id="@+id/tv_start_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLines="1"
        android:singleLine="true"
        android:text="2017/04/04 16:30"
        android:textSize="16sp"
        android:textColor="#4F4F4F"
        app:layout_widthPercent="18%"/>

    <TextView
        android:id="@+id/tv_end_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLines="1"
        android:singleLine="true"
        android:textSize="16sp"
        android:text="2017/04/04 18:30"
        android:textColor="#4F4F4F"
        app:layout_widthPercent="18%"/>

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLines="1"
        android:singleLine="true"
        android:text="等待审核"
        android:textSize="16sp"
        android:textColor="#FEB64E"
        app:layout_widthPercent="15%"/>

</com.zhy.android.percent.support.PercentLinearLayout>
