<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="800dp"
    android:layout_height="match_parent"
    android:background="@drawable/bg_booking_meeting_input">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="10dp"
        android:background="@drawable/bg_approval_top">
        <TextView
            android:id="@+id/tv_title_lable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:text="通讯录"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>
        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_close"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>



    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/rl_title"
        app:layout_heightPercent="80%h"
        app:layout_widthPercent="100%w">
        <RelativeLayout
            android:id="@+id/rl_left"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            app:layout_widthPercent="50%">

            <RelativeLayout
                android:id="@+id/rl1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="8dp"
                android:background="#EEEEEE">
                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_centerVertical="true"
                    android:text="已选会场"
                    android:textColor="#000000"/>
                <TextView
                    android:id="@+id/tv_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(20)"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv1"
                    android:layout_toEndOf="@+id/tv1" />
                <Button
                    android:id="@+id/btn_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#FF4500"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:text="清空"
                    android:paddingRight="10dp"
                    android:gravity="right|center_vertical"
                    android:background="@null"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="#808080"/>
            </RelativeLayout>

            <com.zhy.android.percent.support.PercentRelativeLayout
                android:id="@+id/rl3"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#EEEEEE"
                android:layout_below="@id/rl1"
                xmlns:app="http://schemas.android.com/apk/res-auto">
                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="18sp"
                    android:layout_centerVertical="true"
                    android:text="姓名"
                    android:gravity="center"
                    android:textColor="#000000"
                    app:layout_widthPercent="33%"/>
                <TextView
                    android:id="@+id/tvNum"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="编号"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tvName"
                    android:layout_toEndOf="@+id/tvName"
                    app:layout_widthPercent="33%"/>
                <TextView
                    android:id="@+id/tvType"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="终端类型"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tvNum"
                    android:layout_toEndOf="@+id/tvNum"
                    app:layout_widthPercent="33%"/>
            </com.zhy.android.percent.support.PercentRelativeLayout>
            <ListView
                android:id="@+id/lv_employee"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/rl3"
                android:background="@drawable/border_listview">
            </ListView>
            <TextView
                android:id="@+id/tv_nodata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="18sp"
                android:text="没有数据"
                android:visibility="gone"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:layout_toRightOf="@id/rl_left">
            <RelativeLayout
                android:id="@+id/rl2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="8dp"
                android:background="#EEEEEE">
                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_centerVertical="true"
                    android:text="地址簿"
                    android:textColor="#000000"/>

                <EditText
                    android:layout_width="match_parent"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="5dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_address"
                    android:layout_toEndOf="@+id/tv_address"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/corner_search"
                    android:gravity="center_vertical"
                    android:drawableRight="@mipmap/search_bar_icon_normal"/>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl21"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/rl2"
                android:background="@drawable/border_rl">
                <CheckBox
                    android:id="@+id/cb_checkAll"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:paddingLeft="5dp"
                    android:text="全选"
                    android:textSize="16sp"
                    style="@style/CustomCheckboxTheme"/>
                <!--<TextView
                    android:id="@+id/tv_checkAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/cb_checkAll"
                    android:layout_marginLeft="5dp"
                    android:textColor="#000000"
                    android:text="全选"/>
                  -->
                <TextView
                    android:id="@+id/tv_left"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@id/cb_checkAll"
                    android:textSize="16sp"
                    android:text="("
                    android:gravity="center"
                    android:textColor="#000000"/>
                <TextView
                    android:id="@+id/tv_checkedNum"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/tv_left"
                    android:textSize="16sp"
                    android:text="0"
                    android:gravity="center"
                    android:textColor="#000000"/>
                <TextView
                    android:id="@+id/tv_line"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/tv_checkedNum"
                    android:textSize="16sp"
                    android:text="/"
                    android:gravity="center"
                    android:textColor="#000000"/>
                <TextView
                    android:id="@+id/tv_allNum"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/tv_line"
                    android:textSize="16sp"
                    android:text="0"
                    android:gravity="center"
                    android:textColor="#000000"/>
                <TextView
                    android:id="@+id/tv_right"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/tv_allNum"
                    android:textSize="16sp"
                    android:text=")"
                    android:gravity="center"
                    android:textColor="#000000"/>
            </RelativeLayout>
            <ListView
                android:id="@+id/id_tree"
                android:layout_below="@id/rl21"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border_listview">
            </ListView>

        </RelativeLayout>
    </com.zhy.android.percent.support.PercentRelativeLayout>

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="确认"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:layout_below="@id/ll"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/corner_btn"/>

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="取消"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:layout_alignParentRight="true"
        android:layout_below="@id/ll"
        android:layout_marginRight="100dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/corner_btn1"/>

</com.zhy.android.percent.support.PercentRelativeLayout>